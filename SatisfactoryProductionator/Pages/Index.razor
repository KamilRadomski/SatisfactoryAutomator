@code
{
    protected override async Task OnInitializedAsync()
    {
        CodexState.OnStateChange += StateHasChanged;
        MenuState.OnStateChange += StateHasChanged;

        if (CodexState.Codex == null)
        {
            await CodexState.InitializeCodexAsync();
        }
    }

    public void Dispose()
    {
        CodexState.OnStateChange -= StateHasChanged;
        MenuState.OnStateChange -= StateHasChanged;
    }
}
